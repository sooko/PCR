<Ml>:
    ScreenManager:
        id:main_manager
        Screen
            name:"main_screen"
            NavigationDrawer
                id:nd
                anim_type:"slide_above_simple"
                Button
                FloatLayout
                    canvas.before:
                        Color:
                            rgba:0,1,1,.8
                        Rectangle:
                            size:self.size
                            pos:self.pos
                            source:"img/6880.jpg"
                    BoxVer:
                        pos_hint:{"center_x":.5,"center_y":.5}
                        TopNav
                            on_menu_release:nd.toggle_state(True)
                        ScreenManager:
                            id:sm
                            Screen
                                name:"home"
                                BoxVer:
                                    padding:dp(10),0,dp(10),0
                                    ScreenTittle
                                        text:"RUN DETAIL"
                                        size_hint:1,.06
                                    BoxLayout:
                                        spacing:dp(10)
                                        BoxVer:
                                            padding:dp(5),dp(5),dp(5),dp(5)
                                            canvas:
                                                Color:
                                                    rgba:0,0,0,1
                                                Line:
                                                    width:dp(1)
                                                    rectangle:self.x,self.y,self.width,self.height
                                                Color:
                                                    rgba:0,0,0,.05
                                                Rectangle:
                                                    size:self.size
                                                    pos:self.pos
                                            Carousel:
                                                BoxVer
                                                    Widget:
                                                        size_hint:1,.1
                                                    BoxLayout  
                                                        spacing:dp(3)
                                                        id:root_step
                                                        Progress
                                                            name:"RT"
                                                            max:100
                                                            value:root.protokol[0]
                                                            value2:root.protokol[1]
                                                        Progress
                                                            name:"PREDENAT"
                                                            max:100
                                                            value:root.protokol[2]
                                                            value2:root.protokol[3]
                                                        Progress
                                                            name:"DENAT"
                                                            max:100
                                                            unit2:"detik"
                                                            value:root.protokol[4]
                                                            value2:root.protokol[5]
                                                        Progress
                                                            name:"ANNEAL"
                                                            max:100
                                                            unit2:"detik"
                                                            value:root.protokol[6]
                                                            value2:root.protokol[7]
                                                Chart:
                                                    major_y:10
                                                    major_x:root.protokol[8]
                                        ScrollView:
                                            size_hint:.275,1
                                            id:sv
                                            BoxVer:
                                                size_hint:1,None
                                                height:self.minimum_height
                                                spacing:dp(5)
                                                LAbelDisp:
                                                    name:"TIMER"
                                                    value:"{:02d}:{:02d}:{:02d}".format(root.jam,root.menit,root.detik)
                                                    size_hint:1,None
                                                    height:sv.height/8
                                                LAbelDisp:
                                                    name:"TEMP"
                                                    value:"{:.1f}".format(root.temp)
                                                    size_hint:1,None
                                                    height:sv.height/8
                                                    unit:"               [sup]o[/sup]c"
                                                LAbelDisp:
                                                    name:"CYCLES"
                                                    value:"{}".format(root.cycles)
                                                    size_hint:1,None
                                                    height:sv.height/8
                                                    unit:"               [sup]of {}[/sup]".format(root.protokol[8])

                                    BoxLayout
                                        size_hint:1,.1
                                        spacing:dp(10)
                                        padding:0,dp(5),0,dp(5)
                                        BtnLg             
                                            text:"SET CAMERA"
                                            on_release:
                                                root.on_btn_set_camera_release()
                                        BtnLg             
                                            text:"PROTOKOL"
                                            on_release:
                                                sm.current="protokol_settings"
                                        BtnLg             
                                            text:"PLATE"
                                            on_release:
                                                sm.current="plate_settings"
                                        TgStart:
                                            text:"START"
                                            size_hint:1.23,1
                                            on_state:
                                                root.state=1 if self.state=="down" else 0
                            Sc1
                                name:"protokol_settings"
                                on_set:
                                    sm.current="home"
                                    root.protokol=self.protokol
                            Sc2
                                name:"plate_settings"
                                on_set:
                                    sm.current="home"
                                    root.plate=self.plate  
        Screen:
            size_hint:None,None
            size:root.size
            name:"cam_screen"
            FloatLayout
                id:root_cam
                pos_hint:{"center_x":.5,"center_y":.5}
            BtnImg:
                size_hint:None,None
                size:dp(50),dp(50)
                source:"img/back.png"
                on_press:root.on_btn_camera_back(self)


